<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <% include ./head %>
    <script src="/uploadAvatarForm.js"></script>
    <title>Upload Avatar</title>
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
</head>

<body class="container">
    <main>
        <h3>Upload a profile image</h3>
    </main>
    
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" placeholder="Enter your name" id="name">
            </div>
        </div>
        <div class="form-group row">
                <label class="col-sm-2 col-form-label">Date of birth</label>
                <div class="col-xs-4">
                        <input class="form-control" id="datepicker"name="date" placeholder="DD/MM/YYY" type="text"/>                    
                </div>                
            </div>
        <div class="form-group row">
                <label class="col-sm-2 col-form-label">Avatar</label>
            <div class="col-xs-4">                    
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="files[]" id="mp3File">
                        <label class="custom-file-label" for="mp3File">Choose mp3 file</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" id="btn-upload">Upload</button>
                    </div>
                </div>
            </div>
        </div>
 
    </form>
    <footer>
        <% include ./footer %>
    </footer>

</body>

</html>