<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <% include ./head %>
    <script src="/tasksForm.js"></script>
    <title>This is Task Form</title>
</head>

<body class="container">
    <main>
        <h4>This is a list of tasks, version 1995</h4>
    </main>
    <form>
        <% tasks.forEach(task => { %>
        <div class="row" style="margin-top:10px">
            <div class="col-sm-4">
                <button class="btn btn-sm btn-info"><i class="fa fa-check-square"></i></button>
                <a href="" class="btn-light">
                    <%= task.title %></a>
            </div>
            <div class="col-sm-4">
                <button class="btn btn-sm btn-danger"><i class="fa fa-close"></i></button>
            </div>
        </div>
        <% }) %>

